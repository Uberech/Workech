<%= form_for @workout, remote: true, :html => { :class => "form-horizontal workout" } do |f| %>

  <% if @workout.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @workout.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :workout_date, :class => 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.text_field :workout_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:workout_date) %>
  </div>
  <div class="form-group">
    <%= f.label :completed, :class => 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.text_field :completed, :class => 'form-control' %>
    </div>
    <%=f.error_span(:completed) %>
  </div>
  <div class="form-group">
    <%= f.label :user_id, :class => 'control-label col-lg-3' %>
    <div class="col-lg-9">
      <%= f.text_field :user_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                workouts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
