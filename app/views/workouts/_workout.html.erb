<tr>
  <td><%= link_to workout.id, workout_path(workout) %></td>
  <td><%= workout.description %></td>
  <td><%= workout.workout_date %></td>
  <td><%= workout.completed %></td>
  <td><%= workout.user_id %></td>
  <td><%=l workout.created_at %></td>
  <td>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
          edit_workout_path(workout), :class => 'btn btn-default btn-xs', remote: true %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
          workout_path(workout),
          :method => :delete,
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
          :class => 'btn btn-xs btn-danger', remote: true%>
  </td>
</tr>